@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Smart Library System</title>
    <!-- Favicons -->

    <link href="~/Content/assets/img/books.png" rel="icon">
    <link href="~/Content/assets/img/books.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/Content/assets/vendor/animate.css/animate.min.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link href="~/Content/dataTables.css" rel="stylesheet" />
    <!-- Template Main CSS File -->
    <link href="~/Content/assets/css/style.css" rel="stylesheet">
    @RenderSection("css", required: false)
</head>
<body>
    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top">
        <div class="container d-flex align-items-center">

            <h1 class="logo me-auto"><a href="~/Home">Smart Library</a></h1>
            <!-- Uncomment below if you prefer to use an image logo -->
            <!-- <a href="index.html" class="logo me-auto"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->

            <nav id="navbar" class="navbar order-last order-lg-0">
                <ul>
                    <li><a class="active" href="~/Home">Trang chủ</a></li>
                    <li><a href="~/Home/About">Giới thiệu</a></li>
                    <li><a href="~/Home/Contact">Liên hệ</a></li>
                    <li><a href="~/Home/Yourcart">Sách của bạn</a></li>

                    <li>
                        <div class="searchBox">
                            <form action="/Home/doSearch" method="post">
                                <input type="text" name="tensach"><input type="submit" value="Tìm kiếm">
                            </form>
                        </div>
                    </li>
                    @*<li><a href="~/Account/Login">Đăng nhập</a></li>*@
                    @if (Request.IsAuthenticated)
                    {
                        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                        {
                            @Html.AntiForgeryToken()
                            <li>
                                <a href="javascript:document.getElementById('logoutForm').submit()">Đăng xuất</a>
                            </li>
                        }
                    }
                    else
                    {
                        <li><a href="~/Account/Login">Đăng nhập</a></li>
                    }
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->
        </div>
    </header><!-- End Header -->
    <!-- ======= Hero Section ======= -->
    <section id="hero" class="d-flex justify-content-center align-items-center">
        <div class="container position-relative" data-aos="zoom-in" data-aos-delay="100">
            <h1>Học tập hôm nay,<br>ngày mai tươi sáng.</h1>
            <h2>&quot;Để cho con một hòm vàng không bằng dạy cho con một quyển sách hay” - Vi Hiền Truyện.</h2>
            <a href="~/Home/Explores" class="btn-get-started">Bắt đầu</a>
        </div>
    </section><!-- End Hero -->
    <main id="main">
        <div class="breadcrumbs heading">
            <div class="container">
                <h2>Sách nổi bật</h2>
            </div>
        </div><!-- End Breadcrumbs -->
        <section id="trainers" class="trainers">
            <div class="container" data-aos="fade-up">
                <div class="row" data-aos="zoom-in" data-aos-delay="100">
                    @RenderBody()
                </div>
            </div>
        </section>
    </main><!-- End #main -->
    <!-- ======= Footer ======= -->
    <footer id="footer">

        <div class="footer-top">
            <div class="container">
                <div class="row">

                    <div class="col-lg-3 col-md-6 footer-contact">
                        <h3>Smart Library System</h3>
                        <p>
                            64 Nguyễn Duy Hiệu<br />
                            An Hải Đông, Sơn Trà<br />
                            Đà Nẵng <br><br>
                            <strong>Phone:</strong> +84 0236 3836 127<br>
                            <strong>Email:</strong> info@smartlibrary.com<br>
                        </p>
                    </div>

                    <div class="col-lg-2 col-md-6 footer-links">
                        <h4>Liên kết</h4>
                        <ul>
                            <li><i class="bx bx-chevron-right"></i> <a href="~/home">Trang chủ</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="~/Home/about">Giới thiệu</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="~/home/Contact">Liên hệ</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="~/Home/Yourcart">Sách của bạn</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="~/home/SearchBook">Tìm kiếm</a></li>
                        </ul>
                    </div>

                    <div class="col-lg-3 col-md-6 footer-links">
                        <h4>Chức năng</h4>
                        <ul>
                            <li><i class="bx bx-chevron-right"></i> <a href="#">Quản lý sách</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="#">Quản lý thành viên</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="#">Quản lý đăng ký</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="#">Quản lý mượn trả</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="#">Sách quá hạn</a></li>
                        </ul>
                    </div>

                    <div class="col-lg-4 col-md-6 footer-newsletter">
                        <h4>Đăng ký nhận bản tin</h4>
                        <p>Đăng ký nhận bản tin, thông báo về sách mới - sách hay được nhập của thư viện.</p>
                        <form action="" method="post">
                            <input type="email" name="email"><input type="submit" value="Đăng ký">
                        </form>
                    </div>

                </div>
            </div>
        </div>

        <div class="container d-md-flex py-4">

            <div class="me-md-auto text-center text-md-start">
                <div class="copyright">
                    &copy; Copyright <strong><span>Smart Library</span></strong>. All Rights Reserved
                </div>
                <div class="credits">
                    Designed by <a href="~/Home/About">Smart Library</a>
                </div>
            </div>
            <div class="social-links text-center text-md-right pt-3 pt-md-0">
                <a href="#" class="twitter"><i class="bx bxl-twitter"></i></a>
                <a href="#" class="facebook"><i class="bx bxl-facebook"></i></a>
                <a href="#" class="instagram"><i class="bx bxl-instagram"></i></a>
                <a href="#" class="google-plus"><i class="bx bxl-skype"></i></a>
                <a href="#" class="linkedin"><i class="bx bxl-linkedin"></i></a>
            </div>
        </div>
    </footer><!-- End Footer -->

    <div id="preloader"></div>
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

    <!-- Vendor JS Files -->
    <script src="~/Content/assets/vendor/purecounter/purecounter.js"></script>
    <script src="~/Content/assets/vendor/aos/aos.js"></script>

    <script src="~/Content/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/Content/assets/vendor/php-email-form/validate.js"></script>

    <script src="~/Content/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Template Main JS File -->
    <script src="~/Scripts/dataTables.js"></script>

    <script src="~/Content/assets/js/main.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>